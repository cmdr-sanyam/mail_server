<div class="container mt-4">
  <div class="d-flex g-3">
      <% if controller_name != 'sessions' %>
        <a href="<%= new_session_path(resource_name) %>" class="btn btn-link btn-block mb-2">Log in</a>
      <% end %>

      <% if devise_mapping.registerable? && controller_name != 'registrations' %>
        <a href="<%= new_registration_path(resource_name) %>" class="btn btn-link btn-block mb-2">Sign up</a>
      <% end %>

      <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <a href="<%= new_password_path(resource_name) %>" class="btn btn-link btn-block mb-2">Forgot your password?</a>
      <% end %>

      <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <a href="<%= new_confirmation_path(resource_name) %>" class="btn btn-link btn-block mb-2">Didn't receive confirmation instructions?</a>
      <% end %>

      <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
        <a href="<%= new_unlock_path(resource_name) %>" class="btn btn-link btn-block mb-2">Didn't receive unlock instructions?</a>
      <% end %>

      <% if devise_mapping.omniauthable? %>
        <% resource_class.omniauth_providers.each do |provider| %>
          <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn btn-link btn-block", data: { turbo: false } do %>
            Sign in with <%= OmniAuth::Utils.camelize(provider) %>
          <% end %>
        <% end %>
      <% end %>
  </div>
</div>
